import flet as ft

def main(page):
    tarefas = ft.ListView(expand=True, spacing=10)
    campo_tarefa = ft.TextField(label="Nova tarefa", width=300)
    
    def adicionar_tarefa(e):
        if campo_tarefa.value:
            tarefas.controls.append(ft.Text(campo_tarefa.value))
            campo_tarefa.value = ""
            page.update()
    
    page.add(
        campo_tarefa,
        ft.ElevatedButton("Adicionar", on_click=adicionar_tarefa),
        tarefas
    )

ft.app(target=main)
